{
  "manifest_version": 3,
  "name": "Plan Picker",
  "description": "Productivity tool",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "caribou.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "caribou.png",
    "32": "caribou.png",
    "48": "caribou.png",
    "128": "caribou.png"
  },
  "permissions": ["scripting", "tabs", "activeTab", "storage"],
  "host_permissions": [
    "https://*/*"
  ]
}